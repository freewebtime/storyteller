{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "StoryScript",
	"scopeName": "source.storyscript",
	"patterns": [
		{
			"include": "#comment-line"
		},
		{
			"include": "#storyScript"
		}
	],
	
	"repository": {
		
		"storyScript": {
			"patterns": [
				{
					"include": "#comment-block"
				},
				{
					"include": "#code-line"
				}
			]
		},

		"comment-line": {
			"patterns": [
				{
					"name": "comment",
					"match": "//.*$"
				}
			]
		},
		"comment-block": {
			"patterns": [
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment"
				}
			]
		},

		"comment": {
			"patterns": [
				{
					"include": "#comment-block"
				},
				{
					"include": "#comment-line"
				}
			]
		},

		"code-line": {
			"patterns": [
				{
					"include": "#comment-block"
				},
				{
					"include": "#comment-line"
				},
				{
					"include": "#item-line"
				},
				{
					"include": "#text-line"
				},
				{
					"include": "#module-declaration"
				}
			]
		},

		"module-declaration": {
			"patterns": [
				{
					"match": "^(-) ([\\w\\.]+) (-)\\s+(\/\/.*)?$",
					"captures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "keyword.other.unit"
						},
						"3": {
							"name": "keyword"
						},
						"4": {
							"name": "comment.line"
						}
					}
				}
			]
		},

		"item-line": {
			"patterns": [
				{
					"match": "^\\s*(\\*)\\s(\\b\\w+\\b):(.*)?",
					"name": "entity",
					"captures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "constant.character.escape"
						},
						"3": {
							"patterns": [{
								"include": "#item-type"
							}]
						}
					}
				}
			]
		},
		
		"text-line": {
			"patterns": [
				{
					"include": "#mention"
				},
				{
					"match": "\\*[\\w\\.]+\\s",
					"name": "string"
				}
			]
		},

		"mention": {
			"patterns": [{
					"match": "((?<!\\*)\\*|(?<=\\w|\\)|\\])\\.)(?=[\\w]+\\b)(.*)",
					"captures": {
						"1": {
							"name": "keyword.other.unit"
						},
						"2": {
							"patterns": [{
									"include": "#mention-function"
								},
								{
									"include": "#mention-array"
								},
								{
									"include": "#mention-item"
								}
							]
						}
					}
				},
				{
					"match": "\\d+",
					"name": "constant.numeric"
				}
			]
		},

		"mention-function": {
			"patterns": [{
				"match": "(\\w+)(?=\\()(.*)",
				"captures": {
					"1": {
						"name": "support.function"
					},
					"2": {
						"patterns": [
							{
								"include": "#mention"
							}
						]
					}
				}
			}]
		},
		"mention-array": {
			"patterns": [{
				"match": "(\\w+)(?=\\[)(.*)",
				"captures": {
					"1": {
						"name": "support.type"
					},
					"2": {
						"patterns": [
							{
								"include": "#mention"
							}
						]
					}
				}
			}]
		},
		"mention-item": {
			"patterns": [
				{
					"match": "(?<=\\*|\\.)(\\w+\\b)(.*)",
					"captures": {
						"1": {
							"name": "string"
						},
						"2": {
							"patterns": [
								{
									"include": "#mention"
								}
							]
						}
					}
				}
			]
		},

		"item-type": {
			"patterns": [
				{
					"include": "#comment"
				},
				{
					"match": "\\d+",
					"name": "constant.numeric"
				},
				{
					"include": "#item-type-function"
				},
				{
					"include": "#item-type-array"
				},
				{
					"include": "#item-type-simple"
				}
			]
		},
		"item-type-function": {
			"patterns": [
				{
					"match": "(\\b[\\w]+\\b)\\((.+?)\\)(.*)",
					"captures": {
						"1": {
							"name": "support.function"
						},
						"2": {
							"patterns": [
								{
									"include": "#function-params"
								}
							]
						},
						"3": {
							"patterns": [
								{
									"include": "#item-type"
								}
							]
						}
					}
				}
			]
		},
		"item-type-array": {
			"patterns": [
				{
					"match": "(\\b[\\w]+)\\[(.+?)\\](.*)",
					"captures": {
						"1": {
							"name": "support.type"
						},
						"2": {
							"patterns": [
								{
									"include": "#expression"
								}
							]
						},
						"3": {
							"patterns": [
								{
									"include": "#item-type"
								}
							]
						}
					}
				}
			]
		},
		"item-type-simple": {
			"patterns": [
				{
					"match": "(\\b[\\w]+\\b)(.*)",
					"captures": {
						"1": {
							"name": "support.type"
						},
						"2": {
							"patterns": [
								{
									"include": "#item-type"
								}
							]
						}
					}
				}
			]
		},

		"function-params": {
			"patterns": [
				{
					"include": "#comment"
				},
				{
					"match": "(\\b\\w+\\b)(.*)",
					"captures": {
						"1": {
							"name": "support.variable"
						},
						"2": {
							"patterns": [
								{
									"include": "#function-param-type"
								}
							]
						}
					}
				}
			]
		},
		"function-param-type": {
			"patterns": [
				{
					"include": "#comment"
				},
				{
					"match": "(: [\\w\\.\\[\\]]+)(.*)",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#item-type"
								}
							]
						},
						"2": {
							"patterns": [
								{
									"include": "#function-params"
								}
							]
						}
					}
				},
				{
					"match": ", (.*)",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#function-params"
								}
							]
						}
					}
				}
			]
		},

		"expression": {
			"patterns": [
				{
					"include": "#item-type"
				}
			]
		},

		"invalid": {
			"patterns": [
				{
					"name": "invalid.illegal",
					"match": ".+?(?=//)"
				}
			]
		},
		
		"array-brackets": {
			"patterns": [
				{
					"match": "(\\[)(\\d+)*?(\\])",
					"captures": {
						"1": {
							"name": "constant"
						},
						"2": {
							"patterns": [
								{
									"include": "#digit"
								}
							]
						},
						"3": {
							"name": "constant"
						}
					}
				}
			]
		},

		"keywords": {
			"patterns": [
				{
					"name": "keyword",
					"match": "\\b(true|false|функция)\\b"
				}
			]
		},

		"digit": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\d+"
				}
			]
		}

	}

}