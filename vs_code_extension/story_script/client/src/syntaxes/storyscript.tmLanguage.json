{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "StoryScript",
  "scopeName": "source.storyscript",
  "patterns": [
    {
      "include": "#storyScript"
    }
  ],
  "repository": {
    "storyScript": {
      "patterns": [
        {
          "include": "#comment-line"
        },
        {
          "include": "#comment-block"
        },
        {
          "include": "#template-outer"
        }
      ]
    },

    "template-outer": {
      "patterns": [
        {
          "include": "#templ-import-declaration"
        },
        {
          "include": "#templ-item-declaration"
        },
        {
          "include": "#templ-mention"
        }
      ]
    },
    "template": {
      "patterns": [
        {
          "include": "#comment-line"
        },
        {
          "include": "#comment-block"
        },
        {
          "include": "#templ-mention"
        }
      ]
    },
    "comment-line": {
      "patterns": [
        {
          "match": "(?<!\\\\)(\\/\\/.*)",
          "name": "comment.line"
        }
      ]
    },
    "comment-block": {
      "patterns": [{
        "begin": "\\/\\*",
        "end": "\\*\\/",
        "name": "comment.block",
        "patterns": [{
            "include": "#comment-line"
          },
          {
            "include": "#comment-block"
          }
        ]
      }]
    },
    "expression": {
      "patterns": [
        {
          "include": "#comment-line"
        },
        {
          "include": "#comment-block"
        },

        {
          "include": "#expr-numbers"
        },
        {
          "include": "#expr-mention"
        },
        {
          "include": "#expr-fparams"
        }, 
        {
          "include": "#expr-array"
        }, 
        {
          "include": "#expr-template"
        },
        {
          "include": "#expr-keywords"
        }
      ]
    },
    "expr-keywords": {
      "patterns": [
        {
          "match": "(\\+|\\-|\\/|\\%|\\=|:|\\\"|\\.|\\,|\\*|\\;|\\!|\\^|\\\\|\\||\\@|\\{|\\}|\\'|\\#|\\â„–|\\$|\\&|\\`|\\~|\\>|\\<|\\?)",
          "name": "constant.character.escape"
        }
      ]
    },
    "expr-numbers": {
      "patterns": [
        {
          "match": "\\d+(\\.\\d+)?",
          "name": "constant.numeric"
        }
      ]
    },
    "expr-template": {
      "patterns": [
        {
          "begin": "\\\"",
          "end": "\\\"",
          "beginCaptures": {
            "0": {
              "name": "constant.character.escape"
            }
          },
          "endCaptures": {
            "0": {
              "name": "constant.character.escape"
            }
          },
          "patterns": [
            {
              "include": "#template"
            }
          ]
        }
      ]
    },
    "expr-fparams": {
      "patterns": [
        {
          "begin": "\\(",
          "end": "\\)",
          "beginCaptures": {
            "0": {
              "name": "support.function"
            }
          },
          "endCaptures": {
            "0": {
              "name": "support.function"
            }
          },
          "patterns": [
            {
              "include": "#expr-fparams-content"
            }
          ]
        }
      ]
    },
    "expr-array": {
      "patterns": [
        {
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "support.function"
            }
          },
          "endCaptures": {
            "0": {
              "name": "support.function"
            }
          },
          "patterns": [
            {
              "include": "#expr-fparams-content"
            }
          ]
        }
      ]
    },
    "expr-mention": {
      "patterns": [
        {
          "match": "(:)\\s*(\\w+(?:\\.\\w+)*)",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#expr-keywords"
                }
              ]
            },
            "2": {
              "name": "support.type",
              "patterns": [
                {
                  "include": "#expr-keywords"
                }
              ]
            }
          }
        },
        {
          "match": "(\\w+)(?=\\s*\\()",
          "name": "support.function"
        },
        {
          "match": "\\w+",
          "name": "variable"
        }
      ]
    },
    
    "expr-fparams-content": {
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    },
    
    "templ-mention": {
      "patterns": [
        {
          "begin": "(?<!\\\\)\\*(?=\\(|\\w|\\\")",
          "end": "(;|$|\\r?\\n|(?<!\\*)(\\b|(?<=\\)|\\])\\B)(?!\\.|\\(|\\[))",
          "beginCaptures": {
            "0": {
              "patterns": [{
                "include": "#expr-keywords"
              }]
            }
          },
          "endCaptures": {
            "0": {
              "patterns": [{
                "include": "#expr-keywords"
              }]
            }
          },
          "patterns": [
            {
              "include": "#templ-submention"
            }
          ]
        }
      ]
    },

    "templ-item-declaration":{
      "patterns": [
        {
          "match": "\\s*(\\*)\\s(.*)(\\s*[\\:|\\=]\\s*.*)",
          "captures": {
            "1": {
              "patterns": [{
                "match": ".*",
                "name": "constant.character.escape"
              }]
            },
            "2": {
              "patterns": [{
                "include": "#template"
              }]
            },
            "3": {
              "patterns": [
                {
                  "match": "(\\:)\\s*(.*)",
                  "captures": {
                    "1":{
                      "patterns": [
                        {
                          "match": ".*",
                          "name": "constant.character.escape"
                        }
                      ]
                    },
                    "2": {
                      "patterns": [{
                        "include": "#expression"
                      }]
                    }
                  }
                },
                {
                  "match": "(\\=)\\s*(.*)",
                  "captures": {
                    "1": {
                      "patterns": [{
                        "match": ".*",
                        "name": "constant.character.escape"
                      }]
                    },
                    "2": {
                      "patterns": [{
                        "include": "#expression"
                      }]
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "match": "\\s*(\\*\\-?)\\s(.*)",
          "captures": {
            "1": {
              "patterns": [
                {
                  "match": "\\*\\-",
                  "name": "invalid.illegal"
                },
                {
                  "match": "\\*",
                  "name": "constant.character.escape"
                }
              ]
            },
            "2": {
              "patterns": [{
                "include": "#template"
              }]
            }
          }
        }]
    },

    "templ-import-declaration": {
      "patterns": [{
          "match": "\\s*(\\*\\+)\\s(.*)(\\s*[\\=]\\s*.*)",
          "captures": {
            "1": {
              "patterns": [{
                "match": ".*",
                "name": "constant.character.escape"
              }]
            },
            "2": {
              "patterns": [{
                "include": "#expression"
              }]
            },
            "3": {
              "patterns": [{
                  "match": "(\\:)\\s*(.*)",
                  "captures": {
                    "1": {
                      "patterns": [{
                        "match": ".*",
                        "name": "constant.character.escape"
                      }]
                    },
                    "2": {
                      "patterns": [{
                        "match": ".*",
                        "name": "support.type"
                      }]
                    }
                  }
                },
                {
                  "match": "(\\=)\\s*(.*)",
                  "captures": {
                    "1": {
                      "patterns": [{
                        "match": ".*",
                        "name": "constant.character.escape"
                      }]
                    },
                    "2": {
                      "patterns": [{
                        "include": "#expression"
                      }]
                    }
                  }
                }
              ]
            }
          }
        }, 
        {
          "match": "\\s*(\\*\\+)\\s(.*)",
          "captures": {
            "1": {
              "patterns": [{
                  "match": "\\*\\+",
                  "name": "constant.character.escape"
                }
              ]
            },
            "2": {
              "patterns": [{
                "include": "#expression"
              }]
            }
          }
        }
      ]
    },

    "templ-submention": {
      "patterns": [
        {
          "begin": "\\.?\\\"",
          "end": "\\\"",
          "beginCaptures": {
            "0": {
              "patterns": [{
                "include": "#expr-keywords"
              }]
            }
          },
          "endCaptures": {
            "0": {
              "patterns": [{
                "include": "#expr-keywords"
              }]
            }
          },
          "patterns": [
            {
              "include": "#template"
            }
          ]
        },
        {
          "include": "#expr-fparams"
        },
        {
          "include": "#expr-array"
        },
        {
          "match": "(\\.?)(\\w+)",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#expr-keywords"
                }
              ]
            },
            "2": {
              "name": "string"
            }
          }
        },
        {
          "include": "#expr-keywords"
        }
      ]
    }
  }
}