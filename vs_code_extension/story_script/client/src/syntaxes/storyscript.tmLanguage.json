{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "StoryScript",
	"scopeName": "source.storyscript",
	"patterns": [
		{
			"include": "#comment-line"
		},
		{
			"include": "#storyScript"
		}
	],
	
	"repository": {
		
		"storyScript": {
			"patterns": [
				{
					"include": "#code-line"
				}
			]
		},

		"comment-line": {
			"patterns": [
				{
					"name": "comment",
					"match": "//.*$"
				}
			]
		},

		"item-line": {
			"patterns": [{
				"match": "^\\s*(\\*)\\s(\\b\\w+\\b):(.*)?",
				"captures": {
					"1": {
						"name": "constant"
					},
					"2": {
						"patterns": [{
							"include": "#item-name"
						}]
					},
					"3": {
						"patterns": [{
							"include": "#item-type"
						}]
					}
				}
			}]
		},

		"text-line": {
			"patterns": [
				{
					"match": ".*",
					"name": "string"
				}
			]
		},
		
		"invalid": {
			"patterns": [
				{
					"name": "invalid.illegal",
					"match": ".+?(?=//)"
				}
			]
		},
		
		"array-brackets": {
			"patterns": [
				{
					"match": "(\\[)(\\d+)*?(\\])",
					"captures": {
						"1": {
							"name": "constant"
						},
						"2": {
							"patterns": [
								{
									"include": "#digit"
								}
							]
						},
						"3": {
							"name": "constant"
						}
					}
				}
			]
		},

		"keywords": {
			"patterns": [
				{
					"name": "keyword",
					"match": "\\b(true|false|функция)\\b"
				}
			]
		},

		"mention": {
			"patterns": [
				{
					"match": "@[^\\s^,]+",
					"name": "constant.other.symbol"
				}
			]
		},

		"comment-or-invalid": {
			"patterns": [
				{
					"include": "#comment-line"
				},
				{
					"include": "#invalid"
				}
			]
		},

		"code-line": {
			"patterns": [
				{
					"include": "#comment-line"
				},
				{
					"include": "#item-line"
				},
				{
					"include": "#text-line"
				}
			]
		},

		"function-signature": {
			"patterns": [
				{
					"match": "(\\()(.+?)(\\))",
					"captures": {
						"1": {
							"name": "support.function"
						},
						"3": {
							"name": "support.function"
						},
						"2": {
							"patterns": [
								{
									"match": "(\\b\\w+\\b):?(\\b\\w+\\b)?",
									"captures": {
										"1": {
											"name": "constant.name"
										},
										"2": {
											"name": "support.type"
										}
									}
								}
							]
						}
					}
				}
			]
		},

		"item-name": {
			"patterns": [
				{
					"name": "entity.name",
					"match": ".*"
				}
			]
		},
		"item-type": {
			"patterns": [
				{
					"match": ".*",
					"name": "support.type"
				}
			]
		},
		

		"digit": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\d+"
				}
			]
		}

	}

}