*(
  Шаблоны *+ "./Шаблоны.стс"

  Утилиты = (
    "Без имени": "Без имени"
    
    Конкат: (префикс: строка = "", разделитель: строка = " ", постфикс: строка = "") 
      = "*префикс*разделитель*постфикс"
    Сумма: (а, б) 
      = а + б
    Разница: (а, б) 
      = а - б
    "Смарт-сумма": (а, б) 
      = а < б ? Утилиты.Сумма(а, б) ! Утилиты.Разница(а, б)
    
    "Левелап": (персонаж: (левел: число)) = (
      ... персонаж
      левел = персонаж.левел + 1
    )

    Пол = (Муж = "Муж.", Жен = "Жен.")

    Персонаж = (
      Имя = Утилиты."Без Имени"
      Возраст = 25
      Пол = Пол.Муж
    )
  )

  Зайчик: Утилиты.Персонаж = (
    ...Утилиты.Персонаж
    Имя = Утилиты.Конкат("*Слова[0];-", постфикс = Слова[1])
    Возраст = 15 
  )

  Мир = (
    Название = "Страна Чудес"
  )

  Слова = [ "Зайчик", "Джедайчик", "Ситх", "Мегапситх" ]
);*Зайчик.Имя в *Мир.Название

